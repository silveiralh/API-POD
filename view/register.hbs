<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>NASA API</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
     
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">


  </head>
  <body>
    <div class="side">
        <header class="side-column"> 
            <div class="light center">
               <!--- <input type="text" name="busca" value="" placeholder="AAAA-MM-DD"/> -->
                <p class=" item" ><a  href="/">Login </a></p>
                <br>
            </div>
            
        </header> 
        <div class="content">
            <main class="row">
                <article>
                    <div class=" picture align-content">
                    <div class="cadastro-content">
                        <div class="form-cadastro">
                            <form class="form-login mx-auto text-center " method="post">
                                <h2 class="text-center my-3 text-dark">Cadastro</h2>
                                <input type="email" id="inputEmail" class="form-control my-2" placeholder="Email" name="email" required autofocus></input>
                                <input type="text" id="inputUsername" class="form-control my-2" placeholder="Username" name="username" required autofocus></input>
                                <input type="password" id="inputPassword" class="form-control " placeholder="Senha" name="password" required autofocus></input>
                                <div class="error" id="error"></div> 
                                <button class=" mt-2 my-2" id="cadastrar" type="submit">Cadastrar</button>

                                <div class="text-center">
                                    <a href="/" class="text-decoration-none link mx-3 mt-2 ">Já possuo um cadastro</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    </div>
                </article> 
            </main> 
        </div> 
    </div> 
    <script type="text/javascript">
		document.querySelector("#cadastrar").addEventListener("click",verificaCampos);
		
		
		function verificaCampos(){
			var email =  document.querySelector("#inputEmail").value;
			var username =  document.querySelector("#inputUsername").value;
			var password = document.querySelector("#inputPassword").value;
            var error = document.getElementById("error");
            alert(email + "  "+ username);
			if (username == "" || password == ""|| email == ""){
				error.innerHTML= "Os campos não podem estar vazios!";
			}else{
                error.innerHTML= "";
            }
		}

	</script>
</body>
</html>